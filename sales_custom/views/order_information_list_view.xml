<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action untuk export wizard -->
    <record id="action_order_information_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Order Information</field>
        <field name="res_model">sales_custom.order_information.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Tree View untuk Order Information List -->
    <record id="view_order_information_list_tree" model="ir.ui.view">
        <field name="name">sales_custom.order_information.list.tree</field>
        <field name="model">sales_custom.order_information</field>
        <field name="arch" type="xml">
            <list string="Order Information List" create="false" edit="false" delete="false">
                <header>
                    <button name="%(action_order_information_export_wizard)d" 
                            string="Export to Excel" 
                            type="action" 
                            class="btn-primary"/>
                </header>
                <field name="date_1" string="Starting"/>
                <field name="delivery_input" string="Delivery"/>
                <field name="job_order_no" string="Project No."/>
                <field name="project" string="Project Name"/>
                <field name="pospk_no" string="Contract No"/>
                <field name="customer_id" string="Customer Name"/>
                <field name="quotation_no" string="Quotation No."/>
                <field name="package_equipment" string="Package/Equipment"/>
                <field name="equipment_type" string="Type"/>
                <field name="equipment_qty" string="Qty"/>
                <field name="equipment_material" string="Material"/>
                <field name="equipment_weight" string="Weight (Ton)"/>
                <field name="equipment_diameter" string="Dia/W"/>
                <field name="equipment_thk" string="Thk"/>
                <field name="equipment_length" string="Length"/>
                <field name="stamp_str" string="Stamp"/>
                <field name="value_usd_comp" string="USD"/>
                <field name="value_idr_comp" string="IDR"/>
                <field name="sertifikasi_str" string="Sertifikasi"/>
                <field name="remark_str" string="Remark"/>
            </list>
        </field>
    </record>

    <!-- Action untuk menampilkan list order information -->
    <record id="action_order_information_list" model="ir.actions.act_window">
        <field name="name">Order Information List</field>
        <field name="res_model">sales_custom.order_information</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_order_information_list_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tidak ada data order information yang ditemukan.
            </p>
            <p>
                Klik tombol <b>Export to Excel</b> untuk mengekspor data ke format Excel.
            </p>
        </field>
    </record>
</odoo>
