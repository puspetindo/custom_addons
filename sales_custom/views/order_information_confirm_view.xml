<odoo>
    <record id="view_order_information_confirm_form" model="ir.ui.view">
        <field name="name">sales_custom.order_information.confirm.form</field>
        <field name="model">sales_custom.order_information.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm Revision">
                <group>
                    <field name="order_id" invisible="1"/>
                    <p>Are you sure you want to revise this Order Information?</p>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
