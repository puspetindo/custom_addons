<odoo>

    <!-- FORM View -->
    <record id="view_wmr_list_form" model="ir.ui.view">
        <field name="name">wmr.wmr_list.form</field>
        <field name="model">wmr.wmr_list</field>
        <field name="arch" type="xml">
            <form string="WMR Line">
                <sheet>
                    <group>
                        <!-- <field name="wmr_list_id"/> -->
                        <field name="specification_domain" invisible="1"/>
                        <field name='dimensi_domain' invisible="1"/>
                        <field name="nama_barang"/>
                        <field name="specification"/>
                        <field name="dimension_id"/>
                        <field name="quantity"/>
                        <field name="weight"/>
                        <field name="additional_requirement"/>
                        <field name="stock_availability"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST View -->
    <record id="view_wmr_list_tree" model="ir.ui.view">
        <field name="name">wmr.wmr_list.list</field>
        <field name="model">wmr.wmr_list</field>
        <field name="arch" type="xml">
            <list>
                <field name="nama_barang"/>
                <field name="specification"/>
                <field name="dimension_id"/>
                <field name="specification_domain" invisible="1"/>
                <field name='dimensi_domain' invisible="1"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="additional_requirement"/>
                <field name="stock_availability"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <record id="action_wmr_form_secondary" model="ir.actions.act_window">
        <field name="name">WMR Form</field>
        <field name="res_model">wmr.wmr_form</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat Produk Material Requisition Baru
            </p>
        </field>
    </record>

</odoo>