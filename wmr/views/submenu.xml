<odoo>

    <!-- ACTION: WMR Form -->
    <record id="action_wmr_form_main" model="ir.actions.act_window">
        <field name="name">Welding Material Requisition</field>
        <field name="res_model">wmr.wmr_form</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Klik tombol di kiri atas untuk membuat WMR baru.
            </p>
        </field>
    </record>

    <!-- ACTION: POK Form -->
    <record id="action_pok_form_main" model="ir.actions.act_window">
        <field name="name">Permintaan Order Kerja</field>
        <field name="res_model">pok.form</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Klik tombol di kiri atas untuk membuat POK baru.
            </p>
        </field>
    </record>


    <record id="action_order_kerja" model="ir.actions.act_window">
        <field name="name">Order Kerja</field>
        <field name="res_model">order.kerja</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Klik tombol di kiri atas untuk membuat Order Kerja baru.
            </p>
        </field>
    </record>

    <!-- MENU: Induk Procurement (jika belum ada, ini akan jadi root untuk kedua submenu) -->
    <menuitem id="menu_procurement_root" name="Procurement" parent="purchase.menu_purchase_root" sequence="10"/>

    <!-- SUBMENU: Form WMR -->
    <menuitem id="menu_wmr_form" name="Form WMR" parent="menu_procurement_root" action="action_wmr_form_main" sequence="10"/>

    <!-- SUBMENU: Form POK -->
    <menuitem id="menu_pok_form" name="Form POK" parent="menu_procurement_root" action="action_pok_form_main" sequence="20"/>

    <!-- ORDER KERJA FORM -->
    <menuitem id="menu_order_kerja" name="Form OK" parent="menu_procurement_root" action="action_order_kerja" sequence="30"/>
</odoo>
