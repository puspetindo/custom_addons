<odoo>
    <!-- FORM View -->
    <record id="view_wmr_form" model="ir.ui.view">
        <field name="name">wmr.wmr_form.form</field>
        <field name="model">wmr.wmr_form</field>
        <field name="arch" type="xml">
            <form string="Welding Material Requisition Form">
                <header>
                    <button name="print_wmr_report" string="Print WMR Report" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <h1>Welding Material Requisition (WMR)</h1>
                    <group col="4">
                        <field name="document_number" readonly="1" force_save="1"/>
                        <field name="revision_count" readonly="1"/>
                        <field name="date"/>
                        <field name="job_number_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        <field name="job_order_no" invisible="1"/>
                        <field name="job_item_no" domain="[('order_id', '=', job_number_id)]" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        <field name="job_item" invisible="1"/>
                        <field name="job_item_name" invisible="1"/>
                        <field name="customer"/>
                        <field name="project"/>
                    </group>
                    <group string="Items">
                        <field name="item_purchased" widget="one2many_list">
                            <list>
                                <field name="nama_barang"/>
                                <field name="specification"/>
                                <field name="dimension_id"/>
                                <field name="quantity"/>
                                <field name="weight"/>
                                <field name="additional_requirement"/>
                                <field name="stock_availability"/>
                                <field name="remarks"/>
                            </list>
                        </field>
                    </group>

                    <group>
                        <field name="note" colspan="2" placeholder="Enter any additional notes here..."/>
                    </group>
                    
                    <!-- <group string="Revision History">
                        <field name="revision_ids">
                            <form>
                                <group>
                                    <field name="revision_no"/>
                                    <field name="date"/>
                                    <field name="nama_dibuat"/>
                                    <field name="nama_diperiksa"/>
                                    <field name="nama_disetujui"/>
                                </group>
                            </form>
                        </field>
                    </group> -->

                    <group string="Approval" col="3">
                        <group>
                            <field name="disiapkan"/>
                            <field name="inisial_dibuat" readonly="1" invisible="1"/>
                            <field name="ttd_dibuat" widget="signature"/>
                        </group>
                        <group>
                            <field name="diperiksa"/>
                            <field name="inisial_diperiksa" readonly="1" invisible="1"/>
                            <field name="ttd_diperiksa" widget="signature"/>
                        </group>
                        <group>
                            <field name="disetujui"/>
                            <field name="inisial_disetujui" readonly="1" invisible="1"/>
                            <field name="ttd_disetujui" widget="signature"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST View -->
    <record id="view_wmr_form_tree" model="ir.ui.view">
        <field name="name">wmr.wmr_form.list</field>
        <field name="model">wmr.wmr_form</field>
        <field name="arch" type="xml">
            <list string="WMR List">
                <field name="document_number"/>
                <field name="job_number_id"/>
                <field name="job_order_no"/>
                <field name="job_item_no"/>
                <field name="customer"/>
                <field name="project"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_wmr_form" model="ir.actions.act_window">
        <field name="name">Welding Material Requisition</field>
        <field name="res_model">wmr.wmr_form</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat Form Welding Material Requisition baru
            </p>
        </field>
    </record>
</odoo>