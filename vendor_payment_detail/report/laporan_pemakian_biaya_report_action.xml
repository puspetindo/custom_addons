<odoo>
    <record id="action_report_laporan_pemakian_biaya" model="ir.actions.report">
        <field name="name">Laporan Pemakian Biaya</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vendor_payment_detail.report_laporan_pemakian_biaya_template</field>
        <field name="report_file">vendor_payment_detail.report_laporan_pemakian_biaya_template</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_type">report</field>
        <field name="domain">[('state', '=', 'posted'), ('move_type', '=', 'in_invoice')]</field>
    </record>

    <template id="report_laporan_pemakian_biaya_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <!-- Header -->
                    <table border="1" style="width:100%" cellspacing="0" cellpadding="5">
                        <tr>
                            <td>
                                <div style="text-align:center;">
                                    <h2 style="text-decoration: underline;">LAPORAN PEMAKAIAN
                                        BIAYA</h2>
                                    <h3>LAPORAN PEMAKAIAN BIAYA</h3>
                                    <span> BK. No. : <span>BK .23.08.0755</span>
                                    </span>
                                </div>
                            </td>
                            <td style="padding-bottom: 50px;">
                                <div>
                                    <span> Tanggal <span> : <span t-field="doc.today_date" /></span>
                                    </span>
                                </div>
                                <div>
                                    <span> Company <span> : <span t-field="doc.company_id.name" /></span>
                                    </span>
                                </div>
                                <div>
                                    <span> Receipt Bank <span> : <span
                                                t-field="doc.recipient_bank_id" /></span>
                                    </span>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <!-- Table Data -->
                    <table width="100%" style="font-size:14px;" border="1" cellspacing="0"
                        cellpadding="5">
                        <!-- Baris Pertama-->
                        <tr class="table-header">
                            <td rowspan="3" style="text-align:center">
                                <strong>NO</strong>
                            </td>
                            <td rowspan="3" style="text-align:center">
                                <strong>Keterangan</strong>
                            </td>
                            <td colspan="3" style="text-align:center">
                                <strong>Chart of Account</strong>
                            </td>
                            <td rowspan="3" style="text-align:center">
                                <strong>Jumlah</strong>
                            </td>
                        </tr>
                        <!-- Baris Kedua-->
                        <tr>
                            <td colspan="2" style="text-align:center">
                                <strong>Analyst of Code</strong>
                            </td>
                            <td rowspan="2" style="text-align:center">
                                <strong>
                                    Job. No.
                                </strong>
                                <strong>
                                    JE/JS
                                </strong>
                            </td>
                        </tr>
                        <!-- Baris Ketiga-->
                        <tr>
                            <td style="text-align:center">
                                <span>WBS</span>
                            </td>
                            <td style="text-align:center">
                                <span>RBS</span>
                            </td>
                        </tr>
                        <!-- Baris Keempat-->
                        <tr>
                            <td>
                            </td>
                            <td style="background-color: #eded09">
                                <span>Pembayaran</span>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <!-- Baris t-field -->
                        <t t-foreach="doc.line_ids" t-as="line">
                            <tr>
                                <td>
                                    <span t-esc="line_index + 1" />
                                </td>
                                <td>
                                    <span t-field="line.name" />
                                </td>
                                <td>
                                    <span t-field="line.wbs" />
                                </td>
                                <td>
                                    <span t-field="line.rbs" />
                                </td>
                                <td>
                                    <span t-field="doc.journal_entry_ref" />
                                </td>
                                <td>
                                    <span
                                        t-esc="line.amount and 'Rp {:,.0f}'.format(line.amount).replace(',', '.') or 'Rp 0'" />
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td colspan="5" style="text-align:center">
                                <strong>TOTAL</strong>
                            </td>
                            <td>
                                <span
                                    t-esc="doc.amount_total_net and 'Rp {:,.0f}'.format(doc.amount_total_net).replace(',', '.') or 'Rp 0'" />
                            </td>
                        </tr>
                    </table>
                    <!-- Rekapitulasi -->
                    <table width="100%" style="font-size:14px;" border="1" cellspacing="0"
                        cellpadding="5">
                        <tr>
                            <td rowspan="4" colspan="3" width="64%"
                                style="text-align:center; font-size:20px;">
                                <span>
                                    <strong>REKAPITULASI</strong>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Diminta</span>
                            </td>
                            <td>
                                <span
                                    t-esc="doc.amount_total_net and 'Rp {:,.0f}'.format(doc.amount_total_net).replace(',', '.') or 'Rp 0'" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Digunakan</span>
                            </td>
                            <td>
                                <span
                                    t-esc="doc.amount_total_net and 'Rp {:,.0f}'.format(doc.amount_total_net).replace(',', '.') or 'Rp 0'" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>(Sisa Lebih/ Sisa Kurang)</span>
                            </td>
                            <td>
                                <span></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:center">
                                <span>PEMINTA</span>
                            </td>
                            <td style="text-align:center">
                                <span>MENGETAHUI</span>
                            </td>
                            <td style="text-align:center">
                                <span>MENGETAHUI</span>
                            </td>
                            <td style="font-weight:bold; text-align:center; font-size:14px;"
                                width="36%" colspan="2" rowspan="1">
                                <span>
                                    <strong>DISETUJUI</strong>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td height="120px">
                            </td>
                            <td height="120px">
                            </td>
                            <td height="120px">
                            </td>
                            <td height="120px" colspan="2">
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:center">
                                <span>
                                    Faris Adi E.S
                                </span>
                            </td>
                            <td style="text-align:center">
                                <span>
                                    Yoggy Marwolo K
                                </span>
                            </td>
                            <td style="text-align:center">
                                <span>
                                    Rima Prihastini
                                </span>
                            </td>
                            <td style="text-align:center" colspan="2">
                                <span>
                                    Gede Putu Yudasma
                                </span>
                            </td>
                            <tr>
                                <td style="text-align:center">
                                    <span>
                                        Finance
                                    </span>
                                </td>
                                <td style="text-align:center">
                                    <span>
                                        Manager
                                    </span>
                                </td>
                                <td style="text-align:center">
                                    <span>
                                        VP Finance dan HR
                                    </span>
                                </td>
                                <td style="text-align:center" colspan="2">
                                    <span>
                                        Direktur Utama
                                    </span>
                                </td>
                            </tr>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>