<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format for Perincian Pembayaran -->
    <record id="paperformat_perincian_pembayaran" model="report.paperformat">
        <field name="name">Perincian Pembayaran Paper Format</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>


    <!-- Report Action for Perincian Pembayaran -->
    <record id="action_report_perincian_pembayaran" model="ir.actions.report">
        <field name="name">Cetak Perincian Pembayaran</field>
        <field name="model">payment.detail</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">perincian_pembayaran.report_perincian_template</field>
        <field name="report_file">perincian_pembayaran.report_perincian_template</field>
        <field name="print_report_name">'Perincian Pembayaran - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_payment_detail" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="perincian_pembayaran.paperformat_perincian_pembayaran" />
    </record>
</odoo>