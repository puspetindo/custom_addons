<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format -->
        <record id="paperformat_payment_detail" model="report.paperformat">
            <field name="name">Payment Detail A4 Portrait</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <!-- Action Report -->
        <record id="action_payment_detail_report" model="ir.actions.report">
            <field name="name">Cetak Bukti Bank Keluar</field>
            <field name="model">payment.detail</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">perincian_pembayaran.report_bukti_bank_keluar</field>
            <field name="report_file">perincian_pembayaran.report_bukti_bank_keluar</field>
            <field name="print_report_name">'Perincian_Pembayaran_%s' % (object.name or 'N/A')</field>
            <field name="paperformat_id" ref="paperformat_payment_detail" />
            <field name="binding_model_id" ref="model_payment_detail" />
        </record>

    </data>
</odoo>