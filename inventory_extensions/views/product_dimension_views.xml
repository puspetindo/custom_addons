<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM View untuk Product Dimension -->
    <record id="view_product_dimension_form" model="ir.ui.view">
        <field name="name">product.dimension.form</field>
        <field name="model">product.dimension</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="specification_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="kategori_name"/>
                            <field name="ukuran_dimensi"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST View untuk Product Dimension -->
    <record id="view_product_dimension_list" model="ir.ui.view">
        <field name="name">product.dimension.list</field>
        <field name="model">product.dimension</field>
        <field name="arch" type="xml">
            <list>
                <field name="specification_id"/>
                <field name="kategori_name"/>
                <field name="ukuran_dimensi"/>
            </list>
        </field>
    </record>

    <!-- SEARCH View untuk Product Dimension -->
    <record id="view_product_dimension_search" model="ir.ui.view">
        <field name="name">product.dimension.search</field>
        <field name="model">product.dimension</field>
        <field name="arch" type="xml">
            <search string="Cari Dimensi Produk">
                <field name="specification_id"/>
                <field name="ukuran_dimensi"/>
                <group expand="0" string="Kelompokkan Berdasarkan">
                    <filter string="Spesifikasi" name="groupby_specification_id" domain="[]" context="{'group_by': 'specification_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action untuk membuka Product Dimension -->
    <record id="action_product_dimension" model="ir.actions.act_window">
        <field name="name">Dimensi Produk</field>
        <field name="res_model">product.dimension</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_product_dimension_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat dimensi produk baru
            </p>
        </field>
    </record>
</odoo> 